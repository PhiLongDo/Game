<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffff99"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".ChonSoTuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Chọn số tụ"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#ff00ff"
        android:textSize="40sp"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#cc782a00"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/btn_1tu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Một tụ"
            android:onClick="chontu"
            android:background="@drawable/button_selector"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_2tu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hai tụ"
            android:onClick="chontu"
            android:background="@drawable/button_selector"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_3tu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ba tụ"
            android:background="@drawable/button_selector"
            android:onClick="chontu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_4tu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bốn tụ"
            android:background="@drawable/button_selector"
            android:onClick="chontu"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>